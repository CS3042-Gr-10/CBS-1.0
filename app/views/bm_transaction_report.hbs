<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="shortcut icon" type="png" href="/image/head_logo.png">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <link rel="stylesheet" href="/stylesheets/dycalendar.min.css">
    <title>Seychelles Bank (Pvt) Ltd.</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Administrator Dashboard</a>
            <img src="./image/shield_lock.svg" alt="" width="32" height="32" title="Bootstrap">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <a class="btn btn-secondary my-2 my-sm-0" href="login.html" role="button">LOG OUT</a>
                </ul>
            </div>
        </nav>
    </header>
    <main>

            <div class="container py-4">

                <h2 class="p-3 text-center">Loan Details</h2>
                <hr>
                <div class="container py-4">
                    <div class="text-center">
                        {{#if error}}
                            <div class="row alert alert-danger" role="alert">
                                {{error}}
                            </div>
                        {{/if}}
                        {{#if success}}
                            <div class="row alert alert-success" role="alert">
                                {{success}}
                            </div>
                        {{/if}}
                        <h1>Transaction Report of {{bm_branch.branch_name}} branch</h1>
                        <h3>Transaction Report of {{bm_branch.contact_No}} branch</h3>
                        <pre>
                            <h5>FROM:- {{start_date}} </h5>
                            <h5>TO:- {{end_date}} </h5>
                        </pre>
                        <pre>
                            {{#if deposits}}
                                <h3>Deposits</h3>
                                <table style="width:100%">
                                    <tr>
                                        <th>Transaction Id</th>
                                        <th>Account ID</th>
                                        <th>Deposit Type</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                    {{#each deposits}}
                                        <tr>
                                            <td>{{this.trans_id}}</td>
                                            <td>{{this.acc_id}}</td>
                                            <td>{{this.deposit_type}}</td>
                                            <td>{{this.amount}}</td>
                                            <td>{{this.date}}</td>
                                        </tr>
                                    {{/each}}
                                </table>
                            {{/if}}
                            {{#if withdrawal}}
                                <h3>Withdrawals</h3>
                                <table style="width:100%">
                                    <tr>
                                        <th>Transaction Id</th>
                                        <th>Account ID</th>
                                        <th>Withdraw Type</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                    {{#each withdrawal}}
                                        <tr>
                                            <td>{{this.trans_id}}</td>
                                            <td>{{this.acc_id}}</td>
                                            <td>{{this.withdraw_type}}</td>
                                            <td>{{this.amount}}</td>
                                            <td>{{this.date}}</td>
                                        </tr>
                                    {{/each}}
                                </table>

                            {{/if}}
                            {{#if transfer}}
                                <h3>Transfers</h3>
                                <table style="width:100%">
                                    <tr>
                                        <th>Transaction Id</th>
                                        <th>From Account ID</th>
                                        <th>To Account ID</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                    {{#each transfer}}
                                        <tr>
                                            <td>{{this.trans_id}}</td>
                                            <td>{{this.from_acc_id}}</td>
                                            <td>{{this.to_acc_id}}</td>
                                            <td>{{this.amount}}</td>
                                            <td>{{this.date}}</td>
                                        </tr>
                                    {{/each}}
                                </table>
                            {{/if}}
                            {{#if loan_payments}}
                                <h3>Loan Payment</h3>
                                <table style="width:100%">
                                    <tr>
                                        <th>Transaction Id</th>
                                        <th>Loan ID</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                    {{#each loan_payments}}
                                        <tr>
                                            <td>{{this.trans_id}}</td>
                                            <td>{{this.loan_id}}</td>
                                            <td>{{this.amount}}</td>
                                            <td>{{this.date}}</td>
                                        </tr>
                                    {{/each}}
                                </table>
                            {{/if}}
                            </pre>
                        </div>
                    </div>
                </div>
            </div>
        <a href="/BankManager/{{user.user_id}}" type="button" class="btn btn-primary btn-lg btn-block">Back</a>
        </div>
    </main>

    <footer class="bottom">Seychells Bank (Pvt) Ltd. - Version 1.0.0 Â© 2020 | <a href="">Visit Us</a></footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src=/javascript/dycalendar-jquery.min.js"></script>
    <script>
        dycalendar.draw({ target: '#dycalendar-today-with-skin-shadow', type: 'month', monthformat: "full", highlighttoday: true, prevnextbutton: "show" });
    </script>
</body>

</html>